{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "botId": {
            "type": "string",
            "metadata": {
                "description": "Bot app name."
            },
            "minLength": 2
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "sku": {
            "type": "string",
            "defaultValue": "S1",
            "metadata": {
                "description": "The SKU of App Service Plan."
            }
        },
        "botsku": {
            "type": "string",
            "defaultValue": "S1",
            "metadata": {
                "description": "The SKU of Bot Service."
            }
        },
        "msAppId": {
            "defaultValue": "",
            "type": "String"
        },
        "msAppPassword": {
            "defaultValue": "",
            "type": "String"
        },
        "zipUrl": {
            "defaultValue": "",
            "type": "String"
        },
        "QnAEndpointHostName": {
            "defaultValue": "",
            "type": "String"
        },
        "QnAAuthKey": {
            "defaultValue": "",
            "type": "String"
        },
        "QnAKnowledgebaseId": {
            "defaultValue": "",
            "type": "String"
        }
    },
    "variables": {
        "webAppName": "[concat(parameters('botId'), '-', uniqueString(resourceGroup().name, '-botapp'))]",
        "appServicePlanPortalName": "[concat('AppServicePlan-', variables('webAppName'))]"
    },
    "resources": [
        {
            "apiVersion": "2019-08-01",
            "type": "Microsoft.Web/serverfarms",
            "name": "[variables('appServicePlanPortalName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            }
        },
        {
            "apiVersion": "2019-08-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('webAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]"
            ],
            "kind": "app",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        },
                        {
                            "name": "MicrosoftAppId",
                            "value": "[parameters('msAppId')]"
                        },
                        {
                            "name": "MicrosoftAppPassword",
                            "value": "[parameters('msAppPassword')]"
                        },
                        {
                            "name": "QnAKnowledgebaseId",
                            "value": "[parameters('QnAKnowledgebaseId')]"
                        },
                        {
                            "name": "QnAAuthKey",
                            "value": "[parameters('QnAAuthKey')]"
                        },
                        {
                            "name": "QnAEndpointHostName",
                            "value": "[parameters('QnAEndpointHostName')]"
                        },
                        {
                            "name": "QnAServiceType",
                            "value": "v2"
                        }
                    ],
                    "webSocketsEnabled": true,
                    "cors": {
                        "allowedOrigins": [
                            "https://ms.portal.azure.com",
                            "https://botservice.hosting.portal.azure.net",
                            "https://botservice-ms.hosting.portal.azure.net",
                            "https://hosting.onecloud.azure-test.net/"
                        ]
                    }
                }
            },
            "resources": [
                {
                    "type": "Extensions",
                    "apiVersion": "2015-02-01",
                    "name": "MSDeploy",
                    "dependsOn": [
                        "[concat('Microsoft.Web/Sites/', variables('webAppName'))]"
                    ],
                    "properties": {
                        "packageUri": "[parameters('zipUrl')]",
                        "dbType": "None",
                        "connectionString": ""
                    }
                }
            ]
        },
        {
            "type": "Microsoft.BotService/botServices",
            "apiVersion": "2017-12-01",
            "name": "[parameters('botId')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites/', variables('webAppName'))]",
                "MSDeploy"
            ],
            "sku": {
                "name": "[parameters('botsku')]"
            },
            "kind": "sdk",
            "properties": {
                "name": "[variables('webAppName')]",
                "displayName": "[variables('webAppName')]",
                "endpoint": "[concat('https://', variables('webAppName'), '.azurewebsites.net/api/messages')]",
                "msaAppId": "[parameters('msAppId')]",
                "developerAppInsightsApplicationId": "",
                "developerAppInsightKey": ""
            }
        }
    ]
}
